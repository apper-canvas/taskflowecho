{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access tasks",
            "rule": "authenticated"
          }
        ],
        "operator": "OR"
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/today": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access today's tasks",
            "rule": "authenticated"
          }
        ],
        "operator": "OR"
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/upcoming": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access upcoming tasks",
            "rule": "authenticated"
          }
        ],
        "operator": "OR"
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/list/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access list views",
            "rule": "authenticated"
          }
        ],
        "operator": "OR"
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/archive": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access archived tasks",
            "rule": "authenticated"
          }
        ],
        "operator": "OR"
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}